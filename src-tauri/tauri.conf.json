{
    "build": {
        "beforeBuildCommand": "yarn build",
        "beforeDevCommand": "yarn dev",
        "devPath": "http://localhost:5173",
        "distDir": "../dist"
    },
    "package": {
        "productName": "groundsub",
        "version": "../package.json"
    },
    "tauri": {
        "allowlist": {
            "all": true
        },
        "bundle": {
            "active": true,
            "category": "Utility",
            "icon": [
                "./icons/icon.ico"
            ],
            "identifier": "groundsub",
            "shortDescription": "Modified version of threepole",
            "targets": [
                "msi",
                "updater"
            ],
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": "default-src 'self' object-src 'none'"
        },
        "systemTray": {
            "iconPath": "./icons/icon.ico"
        },
        "updater": {
            "active": true,
            "endpoints": [
                "https://gist.githubusercontent.com/distaste4596/29a042973ecb8d739ffd9e96c4cb7cca/raw"
            ],
            "dialog": true,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZCMzlFN0QwQzg3REM3MzYKUldRMngzM0kwT2M1KzlnenAvZDhHd0g3Um9pbjNkcHJDVjBoMVpWaExsN0ZtMzdZeTNLMlQwTkgK"
        }
    }
}
